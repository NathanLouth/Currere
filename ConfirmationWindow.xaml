<Window x:Class="Currere.ConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        Title="Currere - Confirm Removal" Height="115" Width="300"
        WindowStartupLocation="CenterOwner"
        Background="Black"
        ResizeMode="NoResize" >
    <Border BorderThickness="1" BorderBrush="White" Background="Black">
        <Grid Margin="0,0,0,10">
            <TextBlock Text="Are you sure you want to remove this program?" 
                   VerticalAlignment="Top" HorizontalAlignment="Center" 
                   TextWrapping="Wrap" Margin="0,19,0,0" Height="18" Width="256" Foreground="White"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,50,0,0">
                <Button x:Name="YesButton" Content="Yes" Width="135" Margin="5" Click="YesButton_Click" Background="#6e5c00" Foreground="White" Height="40"/>
                <Button x:Name="NoButton" Content="No" Width="135" Margin="5" Click="NoButton_Click" Background="#6e5c00" Foreground="White" Height="40"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
