<Window x:Class="Currere.CredentialWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Currere - Enter Credentials" Height="171" Width="222"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Black"
        BorderThickness="1"
        BorderBrush="White">
    <Grid Margin="10">
        <Label Content="Username:" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White"/>
        <TextBox x:Name="UsernameTextBox" HorizontalAlignment="Center" VerticalAlignment="Top" Width="196" Margin="0,26,0,0" Foreground="Black"/>

        <Label Content="Password:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,49,0,0" Foreground="White" Width="68"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Center" VerticalAlignment="Top" Width="196" Margin="0,74,0,0" Foreground="Black"/>

        <Button Content="OK" HorizontalAlignment="Left" VerticalAlignment="Top" Width="91" Margin="2,113,0,0" Click="OkButton_Click" Height="31" Background="#6e5c00" Foreground="White"/>
        <Button Content="Cancel" HorizontalAlignment="Right" VerticalAlignment="Top" Width="92" Margin="0,113,4,0" Click="CancelButton_Click" Height="31" Background="#6e5c00" Foreground="White"/>
    </Grid>
</Window>
